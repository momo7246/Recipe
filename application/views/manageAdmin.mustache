{{> header }}

{{> nav_bar}}

<div id="page-wrapper">

			<div class="container-fluid">

				<div class="row">
					<div class="col-lg-12">
						<h1 class="page-header">
							Manage Admin

							<a href="/food_course/manageAdmin/addAdmin" class="btn btn-primary btn-lg" role="button">Add Admin</a>
						</h1>
					</div>
				</div>
				
				<div class="row">


				{{#edit}}
				
					<div class="col-lg-12">
						{{#status.update}}
							<div class="alert alert-success">
								Successful Edited Admin <a href="/food_course/manageAdmin" class="alert-link">Back to admin page</a>
							</div>
						{{/status.update}}

						{{#admin}}
						<form action="/food_course/manageAdmin/updateAdmin/{{ID}}">
							<div class="col-xs-6">

								<div class="panel panel-default">
									<div class="panel-heading">
										User Information
									</div>
									<div class="panel-body">
										<div class="form-group">
											<label>Name</label>
											<input class="form-control" value="{{name}}" name="name" required/>
										</div>
										<div class="form-group">
											<label>Surname</label>
											<input class="form-control" value="{{surname}}" name="surname" required/>
										</div>
										<div class="form-group">
											<label>Email</label>
											<input type="email" class="form-control" value="{{email}}" name="email" required/>
										</div>
									</div>
								</div>

								<button type="submit" class="btn btn-default">Submit</button>
							</div>
							<div class="col-xs-6">
								<div class="panel panel-default">
									<div class="panel-heading">
										Login Information
									</div>
									<div class="panel-body">
										<div class="form-group">
											<label>Username</label>
											<input class="form-control" value="{{username}}" name="username" required/>
										</div>
										<div class="form-group">
											<label>Password</label>
											<input type="password" class="form-control" value="{{password}}" name="password" min="5" max="20" required/>
										</div>
										<div class="form-group">
											<label>Password Confirmation</label>
											<input type="password" class="form-control" value="{{password}}" name="re-password" min="5" max="20" required/>
										</div>
									</div>
								</div>
							</div>
						</form>
						{{/admin}}
					</div>

				{{/edit}}

				{{#view}}

				<div class="col-lg-12">
					<div class="table-responsive">
						<table class="table table-hover">
							<thead>
								<tr>
									<th style="visibility: hidden;"></th>
									<th>First Name</th>
									<th>Last Name</th>
									<th>Username</th>
									<th>Email</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
							{{#content}}
								<tr>
									<td style="visibility: hidden;">{{ID}}</td>
									<td>{{name}}</td>
									<td>{{surname}}</td>
									<td>{{username}}</td>
									<td>{{email}}</td>
									<td>
										<a class="btn btn-primary btn-xs" href="/food_course/manageAdmin/editAdmin?id={{ID}}">Edit</a>
										<a class="btn btn-danger btn-xs" href="/food_course/manageAdmin/deleteAdmin?id={{ID}}">Delete</a>
									</td>
								</tr>
							{{/content}}
							</tbody>
						</table>
					</div>
				</div>

				{{#hasPagination}}
					<div class="col-sm-6 col-sm-offset-6">
						<div class="pagination-table">
							<ul class="pagination">
							{{#pagination}}
								<li class="paginate_button">
									<a href="{{href}}">{{page}}</a>
								</li>
							{{/pagination}}
							</ul>
						</div>
					</div>
				{{/hasPagination}}


				{{/view}}

				{{#add}}

					<div class="col-lg-12">

					{{#status.add}}
						<div class="alert alert-success">
							Successful Added new Admin <a href="/food_course/manageAdmin" class="alert-link">Back to admin page</a>
						</div>
					{{/status.add}}
					{{#status.error}}
						<div class="alert alert-danger">
							This username is already existed. <a href="/food_course/manageAdmin" class="alert-link">Back to admin page</a>
						</div>
					{{/status.error}}

					<form action="/food_course/manageAdmin/addNewAdmin">
						<div class="col-xs-6">
							<div class="panel panel-default">
								<div class="panel-heading">
									User Information
								</div>
								<div class="panel-body">
									<div class="form-group">
										<label>Name</label>
										<input class="form-control" name="name"{{#content.name}} value="{{content.name}}"{{/content.name}} required/>
									</div>
									<div class="form-group">
										<label>Surname</label>
										<input class="form-control" name="surname"{{#content.surname}} value="{{content.surname}}"{{/content.surname}} required/>
									</div>
									<div class="form-group">
										<label>Email</label>
										<input type="email" class="form-control" name="email"{{#content.email}} value="{{content.email}}"{{/content.email}} required/>
									</div>
								</div>
							</div>

							<button type="submit" class="btn btn-default">Submit</button>
						</div>
						<div class="col-xs-6">
							<div class="panel panel-default">
								<div class="panel-heading">
									Login Information
								</div>
								<div class="panel-body">
									<div class="form-group">
										<label>Username</label>
										<input class="form-control" name="username"{{#content.username}} value="{{content.username}}"{{/content.username}} required/>
									</div>
									<div class="form-group">
										<label>Password</label>
										<input type="password" class="form-control" name="password" min="5" max="20" required/>
									</div>
									<div class="form-group">
										<label>Password Confirmation</label>
										<input type="password" class="form-control" name="re-password" min="5" max="20" required/>
									</div>
								</div>
							</div>
						</div>
					</form>
				</div>
				{{/add}}

				{{#delete}}

					{{#status.delete}}
						<div class="alert alert-success">
							Successful Deleted Admin <a href="/food_course/manageAdmin" class="alert-link">Back to admin page</a>
						</div>
					{{/status.delete}}


				{{/delete}}


			</div>


				</div>
			<!-- /.container-fluid -->

		</div>

</div>

{{> footer}}